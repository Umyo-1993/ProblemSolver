<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StartPageActivity1"
    android:background="@drawable/rectangular_border"
    tools:showIn="@layout/app_bar_home">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/experttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Meet Our Experts"
            android:textColor="@color/black"
            android:textSize="20sp"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/experttext"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/expert1"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/expert1"

            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/experttext"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/expert2"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/expert3"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expert4"
            android:layout_marginTop="20dp"
            android:background="@color/cardview_shadow_start_color"
            android:text="How can we help you"
            android:textSize="20dp" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/search" />

        <Button
            android:id="@+id/item_1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/listview"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:text="Android" />

        <Button
            android:id="@+id/item_2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/listview"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_1"
            android:background="@drawable/circle"

            android:text="PHP" />

        <Button
            android:id="@+id/item_3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/listview"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_2"
            android:background="@drawable/circle"
            android:text="MySql" />

        <Button
            android:id="@+id/item_11"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/item_1"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:text="Core Prg" />

        <Button
            android:id="@+id/item_12"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/item_2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_11"
            android:background="@drawable/circle"

            android:text="Python" />

        <Button
            android:id="@+id/item_13"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/item_3"

            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_12"
            android:background="@drawable/circle"
            android:text="Django" />


        <TextView
            android:id="@+id/trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_13"
            android:layout_marginTop="15dp"
            android:text="Trending"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Button
            android:id="@+id/item_1t"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/trending"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:text="Android" />

        <Button
            android:id="@+id/item_2t"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/trending"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_1t"
            android:background="@drawable/circle"

            android:text="PHP" />

        <Button
            android:id="@+id/item_3t"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@id/trending"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_2t"
            android:background="@drawable/circle"
            android:text="MySql" />


        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_2t"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_iconmonstr_home_6" />

        <ImageView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_2t"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_iconmonstr_facebook_messenger_3" />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>


