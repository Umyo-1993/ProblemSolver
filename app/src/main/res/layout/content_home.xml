<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StartPageActivity1"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:id="@+id/linear_experts"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rectangular_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/experttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Meet Our Experts"
            android:textColor="@color/black"
            android:textSize="20sp"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/experttext"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/expert1"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/expert1"

            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/experttext"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/expert4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/expert2"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/expert3"
            android:scaleType="centerCrop"
            android:src="@drawable/umo" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:layout_below="@id/linear_experts"
        android:layout_marginTop="20dp"
        android:text="How can we help you"
        android:background="@color/cardview_shadow_start_color"
        android:textSize="20dp"

        />
    <RelativeLayout
        android:id="@+id/linear_buttons"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/search"
        android:background="@drawable/rectangular_border"
        android:orientation="horizontal">

    <Button
      android:layout_width="120dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:id="@+id/item_1"
        android:background="@drawable/circle"
      android:text="Android"
      />
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/item_2"
        android:background="@drawable/circle"
        android:text="PHP"

        android:layout_toRightOf="@id/item_1"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/item_3"
        android:text="MySql"
        android:background="@drawable/circle"
        android:layout_toRightOf="@id/item_2"
        />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/item_11"
            android:layout_below="@id/item_1"
            android:background="@drawable/circle"
            android:text="Core Prg"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/item_12"
            android:layout_below="@id/item_2"
            android:background="@drawable/circle"
            android:text="Python"

            android:layout_toRightOf="@id/item_11"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/item_13"

            android:layout_below="@id/item_3"
            android:text="Django"
            android:background="@drawable/circle"
            android:layout_toRightOf="@id/item_12"
            />
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trending"
        android:id="@+id/trending"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_below="@id/linear_buttons"
        />

    <RelativeLayout
        android:id="@+id/linear_trending"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/trending"
        android:background="@drawable/rectangular_border"
        android:orientation="horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/item_1t"
            android:background="@drawable/circle"
            android:text="Android"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/item_2t"
            android:background="@drawable/circle"
            android:text="PHP"

            android:layout_toRightOf="@id/item_1t"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/item_3t"
            android:text="MySql"
            android:background="@drawable/circle"
            android:layout_toRightOf="@id/item_2t"
            />


    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:layout_below="@id/linear_trending"
        android:src="@drawable/ic_iconmonstr_home_6"
        android:layout_marginLeft="200dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:layout_below="@id/linear_trending"
        android:src="@drawable/ic_iconmonstr_facebook_messenger_3"
        android:layout_marginLeft="170dp"
        />







</RelativeLayout>
